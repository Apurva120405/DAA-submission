#include <iostream>
#include <vector>
#include <chrono>
#include <ctime>

// Structure representing a customer order
struct Order {
    int order_id;
    std::time_t timestamp;  // Unix timestamp for simplicity

    // For debugging
    void print() const {
        std::cout << "OrderID: " << order_id << ", Timestamp: " << timestamp << "\n";
    }
};

// Merge function to merge two sorted subarrays
void merge(std::vector<Order>& orders, int left, int mid, int right) {
    int n1 = mid - left + 1;
    int n2 = right - mid;

    std::vector<Order> L(n1);
    std::vector<Order> R(n2);

    for (int i = 0; i < n1; ++i)
        L[i] = orders[left + i];
    for (int j = 0; j < n2; ++j)
        R[j] = orders[mid + 1 + j];

    int i = 0, j = 0, k = left;

    // Merge by comparing timestamps
    while (i < n1 && j < n2) {
        if (L[i].timestamp <= R[j].timestamp) {
            orders[k++] = L[i++];
        } else {
            orders[k++] = R[j++];
        }
    }

    while (i < n1) {
        orders[k++] = L[i++];
    }
    while (j < n2) {
        orders[k++] = R[j++];
    }
}

// Recursive merge sort function
void mergeSort(std::vector<Order>& orders, int left, int right) {
    if (left >= right) return;

    int mid = left + (right - left) / 2;
    mergeSort(orders, left, mid);
    mergeSort(orders, mid + 1, right);
    merge(orders, left, mid, right);
}

// Example usage
int main() {
    int n = 10;  // Example smaller size, can scale to 1 million

    std::vector<Order> orders(n);

    // Generate sample orders with random timestamps (within last 1000 seconds)
    std::time_t now = std::time(nullptr);

    for (int i = 0; i < n; ++i) {
        orders[i].order_id = i + 1;
        orders[i].timestamp = now - (std::rand() % 1000);
    }

    std::cout << "Before sorting:\n";
    for (const auto& order : orders) {
        order.print();
    }

    // Sort orders by timestamp
    mergeSort(orders, 0, n - 1);

    std::cout << "\nAfter sorting:\n";
    for (const auto& order : orders) {
        order.print();
    }

    return 0;
}
